{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowSyntheticDefaultImports": true,
      "noEmit": true,
      "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }