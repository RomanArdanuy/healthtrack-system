{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "jsx": "react-jsx",
      "lib": ["dom", "dom.iterable", "esnext"],
      "paths": {
        "@healthtrack/types": ["../../types/src"],
        "@healthtrack/api": ["../../api/src"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
      {
        "path": "../types"
      },
      {
        "path": "../api"
      }
    ]
  }