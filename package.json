{
  "name": "healthtrack-system",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "web": "turbo run dev --filter=web",
    "mobile": "turbo run dev --filter=mobile",
    "api": "turbo run dev --filter=@healthtrack/api"
  },
  "devDependencies": {
    "turbo": "^1.10.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}