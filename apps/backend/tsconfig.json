{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    // Elimina o comenta la l√≠nea rootDir
    // "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@healthtrack/api": ["../../packages/api/src"],
      "@healthtrack/ui": ["../../packages/ui/src"],
      "@healthtrack/api/types/user" : ["../../packages/api/src/types/user"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}